{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./lib",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "sourceMap": false,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,
    "strict": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "incremental": false,
    "composite": false,
    "declaration": false,
    "declarationMap": false,
    "resolveJsonModule": true
  }
}